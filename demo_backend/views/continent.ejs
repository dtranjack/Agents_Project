<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= continentName.name %> Monuments</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0-beta3/css/bootstrap.min.css">
    <style>
        /* Your custom styles here */
    </style>
</head>

<body>

<div class="container mt-4">
    <h1><%= continentName.name %> Monuments</h1>
    <% if (continentResult.length === 0) { %>
        <p>No monument found for this continent at the moment</p>
    <% } else { %>
        <div class="row">
            <% continentResult.forEach((monument) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <a href="/monuments/<%= monument.name %>" target="_blank">
                            <img src="<%= monument.mini_background %>" class="card-img-top" alt="Destination Image">
                        </a>
                        <div class="card-body">
                            <a href="/monuments/<%= monument.name %>" target="_blank">
                                <h5 class="card-title"><%= monument.name %></h5>
                            </a>
                            <p class="card-text"><%= monument.short_description %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0-beta3/js/bootstrap.bundle.min.js"></script>
</body>

</html>
