<div class="header-container">
    <div class="img-container">
        <img src="<%= monumentDetails.cover %>" alt="<%= monumentDetails.name %>">
        <div class="text-overlay animated-overlay">
            <h1>Welcome to <%= monumentDetails.name %></h1>
        </div>
    </div>
</div>

<section class="description">
    <div class="container description">
        <h2>Description</h2>
        <div class="desc">
            <p><%= monumentDetails.description %></p>
            <a href="/download/<%= monumentDetails.name %>/pdf">Download as PDF</a>
        </div>
    </div>
</section>

<section class="gallery">
    <div class="container gallery">
        <h2>Gallery</h2>
        <div class="row gallery-container" id="image-gallery">
            <% galleryImages.forEach((imagePath, index) => { %>
                <div class="col-md-4 col-sm-6 mb-4 gallery-item">
                    <a href="<%= imagePath %>" data-lightbox="gallery" data-title="Image <%= index + 1 %>">
                        <img src="<%= imagePath %>" class="img-fluid rounded" alt="Image <%= index + 1 %>">
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<section class="vid">
    <div class="container">
        <h2>Inside the experience</h2>
        <div class="vydia">
            <div class="video-wrapper">
                <iframe width="853" height="480" src="<%= monumentDetails.video %>"
                        title="<%= monumentDetails.name %>" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>

<section class="comment">
    <!-- Comment Box -->
    <div class="container comment-box">
        <h2>Leave a Comment</h2>
        <!-- monument.ejs -->
        <form action="/submit" method="POST">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" required>
            <br>
            <label for="comment">Comment:</label>
            <textarea name="comment" id="comment" rows="4" required></textarea>
            <!-- Add a hidden input to store the monumentName -->
            <input type="hidden" name="monumentName" value="<%= monumentDetails.name %>">
            <br>
            <input type="submit" value="Submit" class="btn btn-primary">
        </form>

    </div>

    <!-- Comments Section -->
    <div class="container comments">
        <h2>What people are saying about <%= monumentDetails.name %></h2>
        <div class="feedbacks">
        <% if (comments.length === 0) { %>
            <p>No comments yet.</p>
        <% } else { %>
            <ul>
                <% comments.forEach((comment) => { %>
                    <li>
                        <p>
                            <strong><%= comment.name %>:</strong> <%= comment.comment %>
                        </p>
                        <hr class="solid">
                    </li>
                <% }); %>
            </ul>
        <% } %>
        </div>
    </div>
</section>

