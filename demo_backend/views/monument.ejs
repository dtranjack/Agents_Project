<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= monumentDetails.name %></title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta3/css/bootstrap.min.css">
    <!-- Lightbox2 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/CSS/magnific-popup.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
    <script src="/JS/jquery.magnific-popup.js"></script>
    <style>
        html {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1200px;
        }

        .header-container {
            display: flex;
            flex-direction: column;
            height: 70vh;
        }

        .img-container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
        }

        .img-container img {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            z-index: 1;
        }

        .text-overlay h1 {
            font-size: 40px;
            margin-bottom: 20px;
            text-shadow: 5px 5px 8px rgba(0, 0, 0, 0.5);
        }

        .text-overlay p {
            font-size: 18px;
            margin-bottom: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        /* Add a semi-transparent background to the text overlay to make it more highlighted */
        .text-overlay {
            background-color: rgba(0, 0, 0, 0.4);
            padding: 20px;
        }

        .animated-overlay {
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        /* Add a slight animation to the text overlay for a subtle pop-up effect */
        .text-overlay {
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        .text-overlay.visible {
            opacity: 1;
        }


        /* Description section styles */
        .description {
            margin-top: 50px;
        }

        .description h2 {
            margin-bottom: 20px;
            color: #007bff;
        }

        .desc {
            padding: 16px;
            border-style: hidden hidden hidden double;
            border-color: crimson;
            border-width: 5px;
            border-radius: 12px;
            background-color: #c7e2ff;
            font-size: 20px;
        }

        .comment-box {
            margin-top: 50px;
        }

        .comment {
            margin-bottom: 50px;
        }

        .comment-box h2 {
            margin-bottom: 20px;
            color: #007bff;
        }

        .comment-box form {
            display: flex;
            flex-direction: column;
        }

        .comment-box .form-group {
            margin-bottom: 20px;
        }

        .comment-box label {
            margin-bottom: 5px;
        }

        .comment-box input,
        .comment-box textarea {
            padding: 10px;
        }

        .comment-box button {
            padding: 10px 20px;
        }


        /* Add your custom CSS for the gallery here */

        .gallery {
            margin-top: 50px;
        }

        /* Add your custom CSS for the gallery here */
        .gallery-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: space-between; /* This will create space between images */
            max-width: 960px; /* Limit the width of the gallery */
            margin: 0 auto; /* Center the gallery on the page */
        }

        .gallery-item {
            flex-basis: calc(33.33% - 10px); /* Distribute equally with gaps (3 images per row) */
            max-width: calc(33.33% - 10px);
            cursor: pointer;
            position: relative;
            transition: transform 0.3s ease-in-out;
        }

        .gallery-item img {
            width: 100%;
            height: 200px; /* Set a fixed height for the images */
            object-fit: cover; /* Maintain aspect ratio and cover the container */
            cursor: pointer;
        }

        /* Add hover animation */
        .gallery-item:hover {
            transform: scale(1.05);
        }

        .gallery h2 {
            margin-bottom: 20px;
            color: #007bff;
        }

        .vid h2 {
            margin-bottom: 20px;
            color: #007bff;
        }

        .vid {
            margin-top: 50px;
        }

        /* Make vid section responsive */
        /* Responsive video wrapper */
        .video-wrapper {
            position: relative;
            padding-top: 56.25%; /* 16:9 aspect ratio (480 / 853 * 100) */
        }

        .video-wrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        @media screen and (max-width: 768px) {
            .vydia {
                padding-left: 0;
            }
        }
    </style>

</head>
<body>
<div class="header-container">
    <div class="img-container">
        <img src="<%= monumentDetails.cover %>" alt="<%= monumentDetails.name %>">
        <div class="text-overlay animated-overlay">
            <h1>Welcome to <%= monumentDetails.name %></h1>
        </div>
    </div>
</div>

<section class="description">
    <div class="container description">
        <h2>Description</h2>
        <div class="desc">
            <p><%= monumentDetails.description %></p>
            <a href="/download/<%= monumentDetails.name %>/pdf">Download as PDF</a>
        </div>
    </div>
</section>

<section class="gallery">
    <div class="container gallery">
        <h2>Gallery</h2>
        <div class="row gallery-container" id="image-gallery">
            <% galleryImages.forEach((imagePath, index) => { %>
                <div class="col-md-4 col-sm-6 mb-4 gallery-item">
                    <a href="<%= imagePath %>" data-lightbox="gallery" data-title="Image <%= index + 1 %>">
                        <img src="<%= imagePath %>" class="img-fluid rounded" alt="Image <%= index + 1 %>">
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<section class="vid">
    <div class="container">
        <h2>Inside the experience</h2>
        <div class="vydia">
            <div class="video-wrapper">
                <iframe width="853" height="480" src="<%= monumentDetails.video %>"
                        title="<%= monumentDetails.name %>" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>

<section class="comment">
    <div class="container comment-box">
        <h2>Comments</h2>
        <form>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea class="form-control" id="comment" rows="4" placeholder="Enter your comment"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</section>

<script>
    // Initialize Magnific Popup
    $('#image-gallery').magnificPopup({
        delegate: 'a',
        type: 'image',
        gallery: {
            enabled: true
        },
        // Close on outside click
        closeOnContentClick: true,
        // Enable keyboard navigation
        enableKeyboardNavigation: true,
        // Enable smooth sliding transition
        mainClass: 'mfp-zoom-in',
        removalDelay: 300,
        // Customize other options as per your preference
    });

    document.addEventListener('DOMContentLoaded', () => {
        const headerContainer = document.querySelector('.header-container');
        const textOverlay = document.querySelector('.text-overlay');

        function isElementInViewport(element) {
            const rect = element.getBoundingClientRect();
            return (
                rect.top >= 0 &&
                rect.left >= 0 &&
                rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
        }

        function animateTextOverlay() {
            if (isElementInViewport(headerContainer)) {
                textOverlay.classList.add('visible');
            } else {
                textOverlay.classList.remove('visible');
            }
        }

        // Call the function once to handle initial state
        animateTextOverlay();

        // Add scroll event listener to trigger the animation
        document.addEventListener('scroll', animateTextOverlay);
    });
</script>


</body>
</html>