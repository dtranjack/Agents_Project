<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= monumentDetails.name %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta3/css/bootstrap.min.css">
    <!-- Lightbox2 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link  rel="stylesheet" href="/CSS/magnific-popup.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
    <script src="/JS/jquery.magnific-popup.js"></script>
    <style>
        html {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1200px;
        }

        .header-container {
            display: flex;
            flex-direction: column;
            height: calc(100vh - 56px);
            /* Subtract the height of the navbar */
        }

        .img-container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
        }

        .img-container img {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            z-index: 1;
        }

        .text-overlay h1 {
            font-size: 36px;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .text-overlay p {
            font-size: 18px;
            margin-bottom: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        /* Description section styles */
        .description {
            margin-top: 50px;
        }

        .description h2 {
            margin-bottom: 20px;
            color: #007bff;
        }

        /* Add your custom CSS for the gallery here */
        .gallery-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: space-between; /* This will create space between images */
            max-width: 960px; /* Limit the width of the gallery */
            margin: 0 auto; /* Center the gallery on the page */
        }

        .gallery-item {
            flex-basis: calc(33.33% - 10px); /* Distribute equally with gaps (3 images per row) */
            max-width: calc(33.33% - 10px);
            cursor: pointer;
            position: relative;
        }

        .gallery-item img {
            width: 100%;
            height: 200px; /* Set a fixed height for the images */
            object-fit: cover; /* Maintain aspect ratio and cover the container */
            cursor: pointer;
        }
    </style>


</head>
<body>

<h1><%= monumentDetails.name %></h1>
<p><%= monumentDetails.description %></p>
<a href="/download/<%= monumentDetails.name %>/pdf">Download as PDF</a>
<br>
<div class="container gallery">
    <div class="row gallery-container" id="image-gallery">
        <% galleryImages.forEach((imagePath, index) => { %>
            <div class="col-md-4 col-sm-6 mb-4 gallery-item">
                <a href="<%= imagePath %>" data-lightbox="gallery" data-title="Image <%= index + 1 %>">
                    <img src="<%= imagePath %>" class="img-fluid rounded" alt="Image <%= index + 1 %>">
                </a>
            </div>
        <% }); %>
    </div>
</div>

<!-- The modal -->
<div class="modal fade" id="image-modal" tabindex="-1" role="dialog">
    <!-- ... Rest of your modal content ... -->
</div>

<script>
    // Initialize Magnific Popup
    $('#image-gallery').magnificPopup({
        delegate: 'a',
        type: 'image',
        gallery: {
            enabled: true
        },
        // Close on outside click
        closeOnContentClick: true,
        // Enable keyboard navigation
        enableKeyboardNavigation: true,
        // Enable smooth sliding transition
        mainClass: 'mfp-zoom-in',
        removalDelay: 300,
        // Customize other options as per your preference
    });
</script>
</body>
</html>
