<% const contiqueResult = [
    { id: 1, name: 'Asia' },
    { id: 2, name: 'Europe' },
    { id: 3, name: 'North America' },
    { id: 4, name: 'South America' },
    { id: 5, name: 'Africa' }
]; %>

<section id="popular-destinations" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5" style="font-weight: bolder">Popular Destinations</h2>
        <div id="carouselExample" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <% for (const continent of contiqueResult) { %>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card">
                                    <img src="../public/IMG/Halong_Bay/mini_background.jpg" class="card-img-top" alt="<%= continent.name %>">
                                    <a target="_blank" href="TestHomePage.html">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= continent.name %></h5>
                                            <p class="card-text">Description of <%= continent.name %>.</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
                <!-- Add more carousel items here -->
            </div>
            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>
