<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Recommended</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        @import url('https://fonts.cdnfonts.com/css/gt-eesti-display-trial');
        .card {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: 'GT Eesti Display Trial', sans-serif;
        }

        .card-img-top {
            object-fit: cover;
            height: 400px;
            transition: transform 0.3s ease;
        }

        div.AllDes .card:hover .card-img-top {
            transform: scale(1.1);
            overflow: hidden;
            height: 400px;
        }

        .card-body {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            font-size: 1.25rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .card-text {
            overflow: hidden;
            text-overflow: ellipsis;
            flex-grow: 1;
        }

        .va {
            color: #007bff;
            padding-bottom: 30px;
        }

        .ah{
            font-family: 'GT Eesti Display Trial', sans-serif;
        }
    </style>

</head>
<body>
<section id="all" class="py-5">
    <div class="container d-flex flex-column align-items-center">
        <h2 class="text-center mb-5 ah">All Destinations</h2>
        <a href="/all" class="text-center va" target="_blank">View All Destinations <i class="fas fa-arrow-right"></i></a>
        <div class="row">
            <% allmonuResult.forEach((monument) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <img src="<%= monument.mini_background %>" class="card-img-top" alt="Destination Image">
                        <a href="<%= "monuments/" + monument.name%>" target="_blank">
                            <div class="card-body">
                                <h5 class="card-title"><%= monument.name %></h5>
                                <p class="card-text"><%= monument.short_description %></p>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
