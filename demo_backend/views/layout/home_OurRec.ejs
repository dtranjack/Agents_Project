<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Recommended</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="CSS/home_OurRec.css">
    <style>
        @import url('https://fonts.cdnfonts.com/css/gt-eesti-display-trial');
        .card {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: 'GT Eesti Display Trial', sans-serif;
        }

        .card-img-top {
            object-fit: cover;
            height: 200px;
            transition: transform 0.3s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.1);
            overflow: hidden;
            height: 200px;
        }

        .card-body {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            font-size: 1.25rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .card-text {
            overflow: hidden;
            text-overflow: ellipsis;
            flex-grow: 1;
        }
    </style>

</head>
<body>
<section id="our-rec" class="py-5">
    <div class="container">
        <h2 style="font-family: 'GT Eesti Display Trial', sans-serif;" class="text-center mb-5">Our Recommended</h2>
        <div class="row">
            <% monuResult.forEach((monument) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                            <img src="<%= monument.mini_background %>" class="card-img-top" alt="Destination Image">
                        <a href="#">
                        <div class="card-body">
                            <h5 class="card-title"><%= monument.name %></h5>
                            <p class="card-text"><%= monument.short_description %></p>
                        </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
