<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Recommended</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/CSS/home_OurRec.css">

</head>
<body>
<section id="our-rec" class="py-5">
    <div class="container">
        <h2 style="font-family: 'GT Eesti Display Trial', sans-serif;" class="text-center mb-5">Our Recommended</h2>
        <div class="row">
            <% monuResult.forEach((monument) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-img-container">
                            <a class="card-img-top" style="background-image: url(<%= monument.mini_background %>)"
                               href="/monuments/<%= monument.name %>" target="_blank">
                            </a>
                        </div>
                        <div class="card-body">
                            <a href="/monuments/<%= monument.name %>" target="_blank">

                                <h5 class="card-title"><%= monument.name %></h5>
                            </a>
                            <p class="card-text"><%= monument.short_description %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
